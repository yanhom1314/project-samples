<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane fx:id="root" fx:controller="sample.Controller"
          xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
          alignment="center" hgap="6.0" styleClass="root" vgap="6.0">
    <stylesheets>
        <URL value="@/css/login.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="25.0" right="25.0" top="25.0"/>
    </padding>

    <Text fx:id="welcome_text" text="Welcome to JavaFX!" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

    <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" onAction="#handleSubmitButtonAction" text="Sign In"/>
        <Button id="close_btn" mnemonicParsing="false" text="Close" onAction="#closeButtonAction"/>
    </HBox>

    <Text fx:id="action_target" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>
</GridPane>
